@using System.Globalization;

@code {
    [Parameter]
    public DateTime SelectedDate { get; set; }

    [Parameter]
    public EventCallback<DateTime> SelectedDateChanged { get; set; }

    private int selectedYear;
    private int selectedMonth;

    protected override void OnInitialized()
    {
        selectedYear = SelectedDate.Year;
        selectedMonth = SelectedDate.Month;
    }

    private async Task UpdateDate()
    {
        SelectedDate = new DateTime(selectedYear, selectedMonth, 1);
        await SelectedDateChanged.InvokeAsync(SelectedDate);
    }
}

<div>
    <input type="number" @bind="selectedYear" @oninput="UpdateDate" min="2000" max="2099" step="1" />
    <select @bind="selectedMonth" @onchange="UpdateDate">
        @for (int i = 1; i <= 12; i++)
        {
            <option value="@i">@DateTimeFormatInfo.CurrentInfo.GetMonthName(i)</option>
        }
    </select>
</div>
